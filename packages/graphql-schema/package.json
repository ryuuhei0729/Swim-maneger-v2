{
  "name": "@swimmer-management/graphql-schema",
  "version": "1.0.0",
  "private": true,
  "description": "水泳選手マネジメントシステム - GraphQLスキーマ・型定義",
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yml && npm run fix-types",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "fix-types": "node scripts/fix-types.js",
    "clean": "rm -rf generated"
  },
  "dependencies": {
    "graphql": "^16.11.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1"
  },
  "exports": {
    "./types": "./generated/types.ts",
    "./schema": "./src/schema.graphql"
  }
}
